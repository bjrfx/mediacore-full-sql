# Vosk STT Environment Variables
# Copy to .env and update values

# Flask
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this

# MySQL Database (use your cPanel MySQL credentials)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=masakali_dbuser
MYSQL_PASSWORD=your-db-password
MYSQL_DATABASE=masakali_mediacore

# Vosk Model
VOSK_MODEL_NAME=en-us

# FFmpeg (use static binary path on shared hosting)
# Download from: https://johnvansickle.com/ffmpeg/
FFMPEG_PATH=./bin/ffmpeg

# Node.js backend URL (for integration)
NODEJS_BACKEND_URL=https://mediacoreapi-sql.masakalirestrobar.ca

# Optional API key for securing endpoints
STT_API_KEY=
